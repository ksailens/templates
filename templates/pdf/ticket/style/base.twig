{% block style %}
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: "Open Sans", "SansSerif", serif !important;
    }

    div {
      margin: 0;
      padding: 0;
    }

    p {
      margin: 0;
      padding: 0 7px;
    }

    table {
      margin: 0;
      padding: 0;
    }

    b {
      font-weight: bold;
    }

    .content {
      font-size: 12px;
      line-height: 1.2em;
      /*width: 760px;*/
      overflow: hidden;
      text-transform: uppercase;
    }

    .content h1 {
      margin: 0;
      display: block;
      font-size: 14px;
      line-height: 1.2em;
      text-align: center;
      text-transform: uppercase;
    }

    .footnote {
      font-size: 10px;
      position: relative;
      top: -3px;
      text-transform: lowercase;
    }

    span.lg-text {
      font-size: 16px !important;
    }
    span.md-text {
      font-size: 14px !important;
    }
    span.sm-text {
      font-size: 12px !important;
    }
    span.xs-text {
      font-size: 10px !important;
    }

    /* common tables styles */
    /************************/
    table {
      margin-top: 16px;
      width: 100%;
    }

    .table-first {
      margin-top: 0;
    }

    table thead td {
      font-weight: bold;
      border-bottom: 1px dashed #000000;
    }

    table td {
      /*min-width: 80px;*/
      padding: 5px;
    }

    .static-info {
      padding: 5px;
    }
  </style>
{% endblock %}
